#!/bin/sh
[ -z $1 ] && echo "Usage: $0 <example-name>" && exit 1
set -x -e
EXNAME=$1
BASE=$EXNAME/$EXNAME

./process_assembly $BASE.s $BASE.txt $BASE-architecture_params.txt
../src/zk_proof_systems/ppzksnark/ram_ppzksnark/examples/demo_ram_ppzksnark_generator \
    --architecture_params=$BASE-architecture_params.txt \
    --computation_bounds=$BASE-computation_bounds.txt \
    --proving_key=$BASE-proving_key.txt \
    --verification_key=$BASE-verification_key.txt
../src/zk_proof_systems/ppzksnark/ram_ppzksnark/examples/demo_ram_ppzksnark_prover \
    --assembly=$BASE.s \
    --processed_assembly=$BASE.txt \
    --proving_key=$BASE-proving_key.txt \
    --primary_input=$BASE-primary_input.txt \
    --auxiliary_input=$BASE-auxiliary_input.txt \
    --proof=$BASE-proof.txt
../src/zk_proof_systems/ppzksnark/ram_ppzksnark/examples/demo_ram_ppzksnark_verifier \
    --assembly=$BASE.s \
    --processed_assembly=$BASE.txt \
    --verification_key=$BASE-verification_key.txt \
    --proof=$BASE-proof.txt \
    --primary_input=$BASE-primary_input.txt \
    --verification_result=$BASE-verification_result.txt
